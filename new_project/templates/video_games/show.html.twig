{% extends 'base.html.twig' %}

{% block title %}VideoGames{% endblock %}

{% block body %}
    <h1>VideoGames</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video_game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ video_game.name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ video_game.genre }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ video_game.releaseDate ? video_game.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ video_game.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_video_games_index') }}">back to list</a>

    <a href="{{ path('app_video_games_edit', {'id': video_game.id}) }}">edit</a>

    {{ include('video_games/_delete_form.html.twig') }}
{% endblock %}
